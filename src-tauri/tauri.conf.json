{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "ORDER Multisig Dashboard",
  "version": "1.0.0",
  "identifier": "com.order.multisig.dashboard",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:8080",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "ORDER Multisig Yönetişim Paneli",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 800,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "ORDER Team",
    "copyright": "Copyright © 2024 ORDER Team. All rights reserved.",
    "category": "Utility",
    "shortDescription": "ORDER token multisig yönetim paneli",
    "longDescription": "ORDER token dolaşımını ve multisig wallet işlemlerini yönetmek için geliştirilmiş masaüstü uygulaması."
  }
}
